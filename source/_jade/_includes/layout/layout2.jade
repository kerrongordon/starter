- var lay2 = "layout2"

section(class="#{lay2}")
  .container.flex
    |{% for service in site.services limit:3 %}
    article(class="#{lay2}__article")
      div(class="#{lay2}__img")
        img(src="assets/img/hero.jpg" alt="" class="#{lay2}--img")
      h3(class="title #{lay2}__title") {{ service.title }}
      p(class="content #{lay2}__content") {{ service.excerpt }}
      a(href="{{ service.url }}").btn Read More
    |{% endfor %}
