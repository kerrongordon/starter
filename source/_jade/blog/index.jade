|---
|layout: default
|title: My Blog
|---

<!-- This loops through the paginated posts -->

|{% for post in paginator.posts %}
h1
  a(href="{{ post.url }}") {{ post.title }}
p(class="author")
  span(class="date") {{ post.date }}
  
.content
  |{{ post.content }}
|{% endfor %}

<!-- Pagination links -->
.pagination
  |{% if paginator.previous_page %}
  a(href="{{ paginator.previous_page_path }}" class="previous") Previous
  |{% else %}
  span(class="previous") Previous
  |{% endif %}
  span(class="page_number") Page: {{ paginator.page }} of {{ paginator.total_pages }}
  |{% if paginator.next_page %}
  a(href="{{ paginator.next_page_path }}" class="next") Next
  |{% else %}
  span(class="next ") Next
  |{% endif %}
  
